{
  "name": "firestore-helper-ts",
  "version": "1.2.1",
  "description": "A simple library for working with Firebase Firestore in TypeScript/JavaScript applications",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest --config=jest.config.cjs",
    "test:watch": "jest --watch --config=jest.config.cjs",
    "test:coverage": "jest --coverage --config=jest.config.cjs",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "docs": "mkdir -p docs-assets && (typedoc --out docs src/index.ts || echo \"Documentation generation failed but continuing\") && mkdir -p docs",
    "docs:serve": "npx serve docs"
  },
  "keywords": [
    "firebase",
    "firestore",
    "helper",
    "utilities",
    "typescript",
    "database",
    "crud",
    "cloud",
    "nosql"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Orange4Broom/firestore-helper.git"
  },
  "bugs": {
    "url": "https://github.com/Orange4Broom/firestore-helper/issues"
  },
  "homepage": "https://github.com/Orange4Broom/firestore-helper#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "typescript": "^5.8.2",
    "typedoc": "0.25.13",
    "typedoc-plugin-markdown": "3.17.1"
  },
  "dependencies": {
    "firebase": "^10.0.0 || ^11.0.0"
  },
  "peerDependencies": {
    "firebase": "^10.0.0 || ^11.0.0"
  }
}
